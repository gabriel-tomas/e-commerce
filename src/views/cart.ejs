<%- include("./includes/head") %>
<%- include("./includes/end-head/end-head-cart") %>
<%- include("./includes/start-body") %>
    <section class="cart space-sides max-width-section-align space-top">
        <div class="container-title">
            <h1 class="font-wght-700 font-size-md">My cart</h1>
        </div>
        <section class="items-cart">
        </section>
        <section class="right-card">
            <section class="container-summary right-card-defaults">
                <div class="container-title">
                    <h2 class="font-wght-700 font-size-md">Summary</h2>
                </div>
                <div class="total-price">
                    <h3 class="font-size-md font-wght-400">Total</h3>
                    <span class="font-size-md font-wght-400">$ 0,00</span>
                </div>
                <div class="other-payments">
                    <div class="container-incash font-wght-600">
                        <h4 class="font-wght-400 font-size-sm">in cash</h4>
                        <span class="price-incash font-size-md">$ 0,00</span>
                        <p class="font-wght-400 font-size-sm">with 15% discount</p>
                    </div>
                    <div class="container-card">
                        <span class="price-card font-size-base font-wght-500">$ 0,00</span>
                        <p class="p-info font-size-sm">in up to 12x of <span class="divided12 font-wght-600">0,00</span><br> no interest on the card</p>
                    </div>
                </div>
                <button class="btn-finalize-order font-wght-700 font-size-base">Finalize order</button>
            </section>
            <section class="container-shipping right-card-defaults">
                <div class="container-title">
                    <h2 class="font-wght-700 font-size-base">Shipping and delivery</h2>
                </div>
                <div class="container-zip-code">
                    <form action="" class="form-zip-code">
                        <input class="input-zip-code" type="text" placeholder="Zip code">
                        <button class="submit-zip-code font-size-base font-wght-700" type="submit">
                            Calc...
                        </button>
                    </form>
                </div>
            </section>
            <button class="clean-cart font-wght-500 font-size-base">
                <span class="material-symbols-outlined font-wght-300">delete_forever</span>
                Clean cart
            </button>
        </section>
    </section>
    <section class="empty-cart space-sides max-width-section-align">
        <div class="container-empty-cart">
            <div class="container-img margin-align-center">
                <img src="./assets/imgs/empty-cart.svg" alt="Empty cart">
            </div>
            <h1 class="font-size-md font-wght-400">Empty cart</h1>
        </div>
    </section>
<%- include("./includes/footer") %>
<%- include("./includes/end-footer/end-footer-cart") %>
    