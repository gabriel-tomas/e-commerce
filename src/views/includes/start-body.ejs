<body>
    <%- include("./messages") %>
    <header class="header">
        <div class="container-left">
            <button class="menu-btn">
                <span class="font-size-lg material-symbols-outlined">menu</span>
            </button>
            <div class="menu-box">
                <header class="menu-header">
                    <a class="container-account" href="#">
                        <span class="material-symbols-outlined font-size-xl">account_circle</span>
                        <div>
                            <p class="font-size-base">login or sign up</p>
                        </div>
                    </a>
                </header>
                <section class="my-account">
                    <div class="container-title">
                        <h1 class="font-size-md">My account</h1>
                    </div>
                    <div class="options normal-font">
                        <a class="options-item" href="#">
                            <span class="material-symbols-outlined filled font-size-lg">person</span>
                            <span class="font-size-base">My data</span>
                        </a>
                        <a class="options-item" href="#">
                            <span class="material-symbols-outlined filled font-size-lg">favorite</span>
                            <span class="font-size-base">Favorites</span>
                        </a>
                    </div>
                </section>
                <section class="help-configs space-top-3">
                    <div class="container-title">
                        <h1 class="font-size-md">Help and configuration</h1>
                    </div>
                    <div class="options normal-font">
                        <button class="project-info-btn">
                            <span class="material-symbols-outlined font-size-lg">info</span>
                            <span class="font-size-base normal-font">Info</span>
                        </button>
                    </div>
                </section>
            </div>
        </div>
        <div class="container-search">
            <button class="search-btn">
                <span class="search-icon font-size-lg material-symbols-outlined">search</span>
                <span class="right-arrow font-size-lg material-symbols-outlined">chevron_right</span>
            </button>
            <input type="text" class="radius-total" id="search-box">
        </div>
        <div class="container-title">
            <a href="/">
                <h1 class="font-size-lg font-wght-700">E-Commerce</h1>
            </a>
        </div>
        <div class="container-right">
            <button class="change-page-theme">
                <span class="font-size-lg material-symbols-outlined">dark_mode</span>
                <span class="text">
                    <span class="font-size-sm">Dark mode</span>
                    <span class="font-size-sm">
                        <strong class="text-status-darkmode">OFF</strong>
                    </span>
                </span>
            </button>
            <a href="/cart">
                <span class="font-size-lg material-symbols-outlined">shopping_cart</span>
            </a>
        </div>
    </header>