<%- include("./includes/head") %>
<%- include("./includes/end-head/end-head-product") %>
<%- include("./includes/start-body") %>
    <section class="product-item space-sides max-width-section-align space-top">
        <div class="top-content category-brand">
            <a class="category model-load" href="#">
                <span class="path-item font-wght-700"></span>
            </a> >
            <a class="brand model-load" href="#">
                <span class="path-item font-wght-700"></span>
            </a>
        </div>
        <div class="bottom-content gap-top-1-2">
            <div class="left-content product-imgs">
                <div class="main-img model-load">
                    <img class="desactive" src="" alt="">
                </div>
                <div class="gallery-imgs gap-top-0-86">
                    <button class="gallery-item model-load"></button>
                    <button class="gallery-item model-load"></button>
                    <button class="gallery-item model-load"></button>
                    <button class="gallery-item model-load"></button>
                    <button class="gallery-item model-load"></button>
                </div>
            </div>
            <div class="right-content product-info-buy">
                <div class="container-title model-load">
                    <h1 class="font-size-md"></h1>
                </div>
                <div class="container-description model-load">
                    <p class="font-size-base font-wght-400"></p>
                </div>
                <div class="container-rating gap-top-0-65 model-load">
                    <span class="font-size-base"></span>
                </div>
                <div class="container-price gap-top-0-86">
                    <span class="price font-size-lg">$ <span class="value model-load"></span></span>
                    <span class="discount normal-font"><span class="value model-load"></span>% OFF</span>
                </div>
                <div class="container-stock gap-top-0-65">
                    <span class="font-size-base"><%= language.stock.text1 %>: <span class="value model-load"></span> <%= language.stock.text2 %></span>
                </div>
                <div class="container-buy">
                    <div class="container-btn-buy">
                        <a class="btn-buy primary" href="/cart">
                            <button class="font-wght-700"><%= language.buyBox.buy %></button>
                        </a>
                    </div>
                    <div class="container-btn-cart">
                            <button class="btn-add-cart secondary gap-top-0-65 font-wght-700"><%= language.buyBox.cart %></button>
                    </div>
                </div>
            </div>
        </div>
    </section>
<%- include("./includes/footer") %>
