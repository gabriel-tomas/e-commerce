<%- include("./includes/head") %>
<%- include("./includes/end-head/end-head-register-login") %>
<%- include("./includes/start-body") %>
    <section class="register-login space-sides max-width-section-align space-top">
        <% if(route === "register") {%>
            <div class="container-register-login-title">
                <h1 class="font-size-lg"><%= language.registerTitle %></h1>
            </div>
            <form class="form font-size-base" action="/register" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="container-input">
                    <label class="label-placeholder normal-font" for="userName"><%= language.form.name %></label>
                    <input class="input normal-font" type="text" name="name" id="userName">
                </div>
                <div class="container-input">
                    <label class="label-placeholder normal-font" for="userSurName"><%= language.form.surname %></label>
                    <input class="input normal-font" type="text" name="surname" id="userSurName">
                </div>
                <div class="container-input">
                    <label class="label-placeholder normal-font" for="userEmail">E-mail</label>
                    <input class="input normal-font" type="text" name="email" id="userEmail">
                </div>
                <div class="container-input">
                    <label class="label-placeholder normal-font" for="userPassword"><%= language.form.password %></label>
                    <input class="input normal-font" type="text" name="password" id="userPassword">
                </div>
                <div>
                    <button class="submit-form font-wght-700" type="submit"><%= language.form.btnSubmitSignUp %></button>
                </div>
            </form>
            <div class="container-alternative">
                <p class="font-size-base"><%= language.alternative.valueLogin %> <a href="/login" class="accent">Login</a></p>
            </div>
        <% } else {%>
            <div class="container-register-login-title">
                <h1 class="font-size-lg">Login</h1>
            </div>
            <form class="form font-size-base" action="/login" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="container-input">
                    <label class="label-placeholder normal-font" for="userEmail">E-mail</label>
                    <input class="input normal-font" type="text" name="email" id="userEmail">
                </div>
                <div class="container-input">
                    <label class="label-placeholder normal-font" for="userPassword"><%= language.form.password %></label>
                    <input class="input normal-font" type="text" name="password" id="userPassword">
                </div>
                <div>
                    <button class="submit-form font-wght-700" type="submit"><%= language.form.btnSubmitLogin %></button>
                </div>
            </form>
            <div class="container-alternative">
                <p class="font-size-base"><%= language.alternative.valueSignUp %> <a href="/register" class="accent"><%= language.alternative.linkValueSignUp %></a></p>
            </div>
        <% } %>
    </section>
<%- include("./includes/footer") %>
<%- include("./includes/end-footer/end-footer-registerLogin.ejs") %>
